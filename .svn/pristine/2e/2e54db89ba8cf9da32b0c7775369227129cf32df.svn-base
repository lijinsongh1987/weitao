function sendAjax(url, data, callback) {
    return $.ajax({
        type: "POST",
        url: url,
        data: data,
        dataType: "json",
        success: function (data) {
            var flag = true;
            if (data == null) {
                flag = false;
                showErrorMessage("娌℃湁鏁版嵁杩斿洖", 1000);
            }
            else {
                if (data["status"] != null) {
                    if (data["status"] == 0) {
                        showErrorMessage(data["info"], 1000);
                        flag = false;
                    }
                }
            }
            if (flag) {
                callback(data);
            }
        },
        error: function (data) {
            showErrorMessage("杩斿洖鏍煎紡閿欒", 1000);
        }
    });
}
