    <script type="text/javascript" charset="utf-8" src="./Public/ueditor/lang/zh-cn/zh-cn.js"></script>
<script>
	$swidth = $("#zhanshibox").width();
	$(".modifybox").width($swidth);
	$sheight = $(window).height();
	$(".modifybox").height($sheight);
	$("#boxposition").height($sheight);
	var ue = UE.getEditor('editor');

	$('#myform').submit(function(){
		var desc = $('#title').val();
		if(UE.getEditor('editor').hasContents() && desc !=""){
			return true;
		}else{
			return false;
		}
	})



</script>

