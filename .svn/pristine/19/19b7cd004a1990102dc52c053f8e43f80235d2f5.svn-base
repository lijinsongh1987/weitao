<script>
$(function(){
	$widths = window.screen.width;
	$heights = window.screen.availHeight;
	$("#bigbox").css("height",$heights);
	if($widths >= 350){
		$imgheight = $(".goodsimg").height();
		$(".goodstext").css("height",$imgheight);
	}else{
		$(".buttonbox").css("position","static");
	};
	
	$("#cancel").click(function(){
		$(".popbox").fadeOut(500);
		})
	function submitmsg(){
		$("#msg").fadeIn(200,function(){
			window.location.reload();
		});
		};
	$("#ordersubmit").click(function(){
		$id = $("#goodsid").val();
		$ordernumber = $("#ordernumber").val();
		if($ordernumber != ""){
			$.ajax({
			type:"post",
			url:"?s=Goodslist/orderadd",
			data:{id:$id,ordernumber:$ordernumber},
			dataType : "json",			
			success : function(data){
				if(data['data'] == 0){
						alert('提交成功');
						window.location.reload();
					}else if(data['data'] == 1){
						alert('提交失败');
						window.location.reload();
					}else if(data['data'] == 3){
						alert('您的可用免单次数已用完！');
						/* window.location.reload(); */
					}
				}
			});
		}else{
			alert('请填写订单号');
		}
	})
})

</script> 
