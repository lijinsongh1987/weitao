#search-box{
	display: -webkit-flex;
    padding:15px;
    position: fixed;
    top:0;
    z-index: 9;
	width:100%; 
}
#search{
	background:url("../img/search.png") 10px center no-repeat #fff;
	background-size:20px;
	margin-right:0.3125rem;
	line-height:36px;
	border-radius:3px;
	text-indent:40px;
	color:#ccc;
	flex:1;
}
#search:hover{
	text-decoration: none;
}
#news{
	width:24px;
	height:36px;
	background: url("../img/news.png") no-repeat center center;
	background-size: 24px;
}



#icon-box{
	width: 100%;
	background: #fff;
	display: -webkit-flex;
	padding-top: 0.4rem;
	padding-bottom: 0.4rem;
	margin-bottom: 10px;
	color:#161616
}
.icon-conten{
	display:block;
	flex:1;
	color:#161616;
}
.icon-conten:hover{
	color:#161616;
	text-decoration: none;
}
.icon-conten img{
	display:block;
	width: 50%;
	max-width:66px;
	margin: 0 auto;
}
.icon-conten p{
	text-align: center;
	margin-top:0.6em;
}

#news-box{
	background: #fff;
	padding-top:0.3125rem;
	padding-bottom:0.3125rem;
	margin-bottom:10px;
}

.title{
	width: 100%;
	background: #fff;
	text-align: center;
	color:#161616;
	font-size:16px;
	padding-top:0.3125rem;
	padding-bottom:0.3125rem;
}
#list-box{
	width: 100%;
	overflow: hidden;
	background: #fff;
}

.list-box{
	width:100%;
	padding-left:0.3125rem;
	padding-right:0.3125rem;
}
.list{
	width:100%;
	display: -webkit-flex;
	padding-top:10px;
	padding-bottom:10px;
	border-bottom:1px #f3f3f3 solid;
}
.list:hover{
	text-decoration: none
}
.list-box .sp-img{
	display:block;
	width:110px;
	height:110px;
}
.list-box .text-box{
	flex:1;
	margin-left: 10px;
}
.text-box h2{
	font-size: 15px;
	text-align: justify;
	display: -webkit-box !important;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break:break-all;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	color: #161616;
	margin-top:10px;
}
.text-box .price-box{
	margin-top: 10px;
	color:#161616;
	display: -webkit-flex;
	justify-content:space-between;
}
.price-box .price{
	flex:1;
	line-height: 1em;
}
.price .value{
	color:#ff0e2a;
	font-size:12px;
}
.value span{
	margin-left:6px;
}
.value strong{
	font-size: 18px;
}
.price .save-money{
	display: -webkit-flex;
	margin-top:10px;
}
.save-money img{
	width:40px;
	height:16px;
}
.save-money span{
	flex:1;
	line-height: 16px;
	color:#969696;
	margin-left: 6px;
}
.border{
	margin: 0;
	padding: 0;
	border-bottom: 1px solid #f3f3f3;
	margin-top: 10px;
	margin-bottom: 10px;
}
.button-box{
	align-self:flex-end;
}
.button-box .button{
	font-size: 14px;
	color:#fff;
	line-height: 2em;
	background: #ff6b0e;
	width:5.5em;
	text-align: center;
	border-radius: 4px;
}
.button-box .xiaoliang{
	font-size: 12px;
	color:#969696;
	text-align: right;
}
