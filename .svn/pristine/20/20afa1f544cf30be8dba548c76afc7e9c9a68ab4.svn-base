<?php

class InviteAction extends Action{
    public function invite(){
    	$this->openid = $_GET['openid']; 
        $this->display();
    }
    
    public function getweixinuserinfo(){
    	$list = M("weixinuser")->where("openid = '".$_POST['openid']."'")->select();
    	echo json_encode($list);
    }
}

