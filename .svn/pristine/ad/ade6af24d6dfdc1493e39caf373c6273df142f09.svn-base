<body style="background:#f1f2f7">
<div class="superWrap clearfix">
	<!-- 侧边栏-->
	<include file="Public:left"/>
	<div class="superContent">
		<!-- 头部-->
		<div class="super-header super-header2">
			<include file="Public:header"/>
		</div>
		<!-- 内容 -->
		<div class="superCtab superCtabBot" style="background:#f1f2f7">
		
		
			<div class="col-lg-12" style="margin-top:20px;">
			<form class="form-horizontal" method="post" action="?s=OtherSetup/addtext" enctype="multipart/form-data">
			<input type="hidden" name="id" id="id" value="{$classlist.id}"/>
				<div class="ibox-content">
					<div class="form-group" style="overflow:hidden">
	                   <label for="inputPassword1" class="control-label" style="float:left;display:block;width:5em;text-align:left;line-height:34px;padding-top: 0px;">文章分类</label>
	                   <select name="type" id="type" class="form-control" style=" float:left;display:block;width:40em">                             
	                             <option value="0"  {$classlist.type==0?'selected':''}>请选择分类</option>
	                             <volist name="type" id="vo">
	                             	<option value="{$vo.id}" {$classlist['type']==$vo['id']?'selected':''}>{$vo.typename}</option>
	                             </volist>
	                		</select>
	                   <span style="color:red;line-height:34px;margin-left:10px">*</span>
	                   <a class="btn btn-primary" href="?s=OtherSetup/classroom" style="float:right;">返回上一页</a>
	               	</div>
	               	<div class="form-group" style="overflow:hidden">
	                   <label for="inputPassword1" class="control-label" style="float:left;display:block;width:5em;text-align:left;line-height:34px;padding-top: 0px;">文章标题</label>
	                   <input type="text" class="form-control" id="title" name="title" value="{$classlist.title}" style="float:left;display:block;width:40em">
	                   <span style="color:red;line-height:34px;margin-left:10px">*</span>
	               	</div>
	               	<div class="form-group" style="overflow:hidden">
	                   <label for="inputPassword1" class="control-label" style="float:left;display:block;width:5em;text-align:left;line-height:34px;padding-top: 0px;">文章封面</label>
	                   <input type="file" class="form-control" id="imgurl" name="imgurl"style="float:left;display:block;width:40em">
	                   <span style="color:red;line-height:34px;margin-left:10px">*</span>
	               	</div>
	               	<label for="inputPassword1" class="control-label" style="display:block;width:5em;text-align:left;line-height:34px;margin-top: 0px;">文章内容</label>
		          	<script id="editor" name="editor" type="text/plain" style="width:100%;height:300px;">{$classlist.conten}</script>
		          	<div class="form-group" style="margin-top:20px;">
	                	<button type="submit" class="btn btn-success" id="submit" >提交</button>
	               	</div>
		          	  
				</div>
					</form>
				</div>
				
			</div>
		  
		 
		  
		</div>
		
	</div>
		



<!--时间插件-->
