<!DOCTYPE html>
<html lang="en"><head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<title>淘宝客</title>
<link rel="stylesheet" type="text/css" href="./Public/Home/css/common.css">
<script src="./Public/Home/js/jquery-1.11.2.min.js"></script>
<script src="./Public/Home/js/flexible.js"></script>
<script src="./Public/login/login.js"></script>
<style type="text/css">

#conten{
	background:url("./Public/Home/img/login-bg.png") center center no-repeat;
	background-size: 100%;
	height: 100%; 
	position: relative;
}
#conten button{
	width: 80%;
	background: #fff;
	border-radius: 66px;
	border: none;
	margin: 0 auto;
	display: -webkit-flex;
	justify-content:center;
	position: absolute;
	bottom:15%;
	left:50%;
	margin-left: -40%;
}
#conten .wechat-box{
	display: -webkit-flex;
	font-size: 18px;
	color:#527df5;
	padding-top: 10px;
	padding-bottom: 10px;
	width:110px;
	margin: 0 auto;
}
.wechat-box img{
	width:28px;
	height:24px;
	margin-right:10px;
}
</style>
</head>

<body>

	
	<section id="conten">
		
		
		<button type="button" onclick="wxLogin();"><p class="wechat-box"><img src="./Public/Home/img/wechat.png">微信登录</p></button>
		
		
	</section>
	
	
</body>

<script type="text/javascript">
	$maxheight = document.body.clientHeight;
	$("#conten").height($maxheight);
	function wxlogin_suc_call(nickname,headimage,openid){
		localStorage.setItem("nickname",nickname);
		localStorage.setItem("imageurl",headimage);
		localStorage.setItem("openid",openid);
		alert(openid+" || "+headimage);
		$.ajax({
            type: 'GET',
            url: '?s=Login/insertuserinfo',
           	data:{'nickname':nickname,'imageurl':headimage,'openid':openid},
            dataType: 'json',
            success: function(data){
            }
		});
	}
</script>
    
</html>