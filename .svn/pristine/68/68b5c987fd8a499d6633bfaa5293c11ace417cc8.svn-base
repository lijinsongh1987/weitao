		        </volist>
		        
		        
		      </div>
		      <div class="swiper-slide">
		      	<volist name="list" id="vo01">
			      	<if condition="$vo01.status eq 0">
			      		<if condition="$vo01.shixiao eq 0">
					        <div class="coupon-box">
					        	<img src="./Public/Home/img/coupon-box-gb.png">
					        	<div class="coupon">
					        		<div class="text-box">
					        			<h2 class="type">{$vo01.typename}</h2>
					        			<p class="use">单笔订单超过{$vo01.condition}元可用</p>
					        			<if condition="$vo01.faildate eq 0">
