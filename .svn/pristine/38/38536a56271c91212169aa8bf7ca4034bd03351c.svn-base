function zhaopin(id,findstatus){
	$.ajax({
		type:"post",
		url:"?s=AdminBackstage/updatezhaopin",
		data:{'id':id,'findstatus':findstatus},
		dataType : "json",			
		success : function(data){
			if(data['msg'] == 1){
				layer.msg('操作成功',{time:1000},function(){
					window.location.reload();
				}); 
			}else if(data['msg'] == 2){
				layer.msg('操作失败',{time:1000}); 
			}
		}
	});
}

$("#addmedia").click(function(){
	$addmedianame = $("#addmedianame").val();
	if($addmedianame !== ""){
		$.ajax({
			type:"post",
			url:"?s=AdminBackstage/addmediaSetup",
			data:{addmedianame:$addmedianame},
			dataType : "json",			
			success : function(data){
				if(data['data'] == 0){
					layer.msg('添加成功',{time:1000},function(){
						window.location.reload();
					}); 
				}else if(data['data'] == 1 || data['data'] == 2){
					layer.msg('添加失败',{time:1000}); 
				}else if(data['data'] == 3){
					layer.msg('此媒体id已存在',{time:1000}); 
				}
			}
		});
	}else{
		layer.msg('请填写相关数据',{time:1000}); 
	}
})

$("#addshopper").click(function(){
	$shopperid = $("#addshopperid").val();
	$shoppername = $("#addshoppername").val();
	$mid = $("#addmid").val();
	//alert($mid);
	if($shopperid !== "" &&$shoppername !== "" && $mid !== 0){
		$.ajax({
			type:"post",
			url:"?s=AdminBackstage/addshopper",
			data:{shopperid:$shopperid,shoppername:$shoppername,mid:$mid},
			dataType : "json",			
			success : function(data){
				if(data['data'] == 0){
					layer.msg('添加成功',{time:1000},function(){
						window.location.reload();
					}); 
				}else if(data['data'] == 1){
					layer.msg('添加失败',{time:1000}); 
				}else if(data['data'] == 2){
					layer.msg('所属媒体不存在，请重新选择',{time:1000}); 
				}else if(data['data'] == 4){
					layer.msg('此导购位ID已存在',{time:1000}); 
				}
			}
		});
	}else{
		layer.msg('请填写相关数据',{time:1000}); 
	}
})


